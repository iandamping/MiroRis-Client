<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_small">

    <View
        android:id="@+id/ivMiniAddProduct"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/box_transparent_dotted_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_a_photo_24"
        app:layout_constraintBottom_toBottomOf="@+id/ivMiniAddProduct"
        app:layout_constraintEnd_toEndOf="@+id/ivMiniAddProduct"
        app:layout_constraintStart_toStartOf="@+id/ivMiniAddProduct"
        app:layout_constraintTop_toTopOf="@+id/ivMiniAddProduct" />

</androidx.constraintlayout.widget.ConstraintLayout>